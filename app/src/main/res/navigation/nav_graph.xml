<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.jbvideochat.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_channelsFragment"
            app:destination="@id/channelsFragment" />
        <action
            android:id="@+id/action_loginFragment_to_videoChatFragment"
            app:destination="@id/videoChatFragment" />
    </fragment>
    <fragment
        android:id="@+id/channelsFragment"
        android:name="com.example.jbvideochat.ui.channels.ChannelsFragment"
        android:label="ChannelsFragment" >
        <action
            android:id="@+id/action_channelsFragment_to_videoChatFragment"
            app:destination="@id/videoChatFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoChatFragment"
        android:name="com.example.jbvideochat.ui.videochat.VideoChatFragment"
        android:label="VideoChatFragment" />
</navigation>